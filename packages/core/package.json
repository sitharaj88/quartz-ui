{
  "name": "quartz-ui",
  "version": "1.0.0-dev.2025-02.1",
  "description": "Modern, accessible component library for React Native & Expo",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "import": "./dist/tokens/index.mjs",
      "require": "./dist/tokens/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react-native",
    "expo",
    "ui-components",
    "design-system",
    "accessibility",
    "rtl",
    "theming",
    "design-tokens"
  ],
  "author": "Quartz UI Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sitharaj88/quartz-ui.git"
  },
  "bugs": {
    "url": "https://github.com/sitharaj88/quartz-ui/issues"
  },
  "homepage": "https://github.com/sitharaj88/quartz-ui",
  "peerDependencies": {
    "expo": ">=49.0.0",
    "expo-haptics": ">=12.0.0",
    "expo-linear-gradient": ">=12.0.0",
    "react": ">=18.0.0 || >=19.0.0",
    "react-native": ">=0.72.0",
    "react-native-gesture-handler": ">=2.14.0",
    "react-native-reanimated": ">=3.0.0 || >=4.0.0",
    "react-native-safe-area-context": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "expo-linear-gradient": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "expo-haptics": "~15.0.0",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.0",
    "react-native-safe-area-context": "~5.6.0",
    "tsup": "^8.0.0",
    "typescript": "~5.8.0"
  }
}
